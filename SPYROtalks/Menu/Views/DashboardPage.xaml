<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="SPYROtalks.Menu.Views.DashboardPage">
    <ContentPage.Content>
        <Grid HorizontalOptions="Fill" VerticalOptions="Fill" Margin="20,40">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Image Grid.Row="0" Source="logo_spyrotalks.png" Aspect="AspectFit"/>
            <Button x:Name="lottieSample" Grid.Row="1" Text="Lottie sample" Clicked="Handle_LottieButtonClicked"/>
            <Button x:Name="refitSample" Grid.Row="2" Text="Refit sample" Clicked="Handle_RefitButtonClicked"/>
        </Grid>
    </ContentPage.Content>
</ContentPage>
